---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import Hero from '../components/Hero.astro'
import Feature from '../components/Feature.astro'
import Counter from '../components/Counter.astro'
import Contributors from '../components/Contributors.astro'
import ExternalResources from '../components/ExternalResources.astro'
import GuideList from '../components/GuideList.astro'
const guides = await Astro.glob('./guides/*.md');

---

<DefaultLayout title="Home">
  <Hero />
  <section class="mt-64 mb-32">
    <h2 class="mb-16 text-6xl text-center">Contributors</h2>
    <Contributors />
  </section>
  <section class="my-64">
    <div class="container">
      <h2 class="mb-16 text-6xl text-center">Guides</h2>
      <GuideList guides={guides} />
    </div>
  </section>
  <section class="my-64">
    <div class="container">
      <h2 class="mb-16 text-6xl text-center">External Resources</h2>
      <ExternalResources />
    </div>
  </section>
